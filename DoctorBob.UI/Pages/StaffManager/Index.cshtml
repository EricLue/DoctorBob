@page
@model DoctorBob.UI.Pages.StaffManager.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Personal Verwaltung</h1>

<p>
    <a asp-page="Create">Neues Personal erfassen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Vorname")
            </th>
            <th>
                @Html.DisplayName("Nachname")
            </th>
            <th>
                @Html.DisplayName("Rolle")
            </th>
            <th>
                @Html.DisplayName("UserName")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model.Staff) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
