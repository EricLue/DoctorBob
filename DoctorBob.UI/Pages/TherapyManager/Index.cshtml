@page
@model DoctorBob.UI.Pages.TherapyManager.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Therapie Verwaltung</h1>

<p>
    <a asp-page="Create">Neue Therapie erfassen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Therapy[0].Name)
            </th>
            <th>
                @Html.DisplayName("Anz. Medikamente")
            </th>
            <th>
                @Html.DisplayName("Medikament")
            </th>
            <th>
                @Html.DisplayName("Betreuung")
            </th>
            <th>
                @Html.DisplayName("Zeitmodell")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Therapy) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantityOfDrug)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Drug.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaringStaff.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeModel.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
