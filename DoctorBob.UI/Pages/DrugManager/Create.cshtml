@page
@model DoctorBob.UI.Pages.DrugManager.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h3>Hinzufügen</h3>

<hr />
<div class="container border" style="padding: 20px">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Drug.Name" class="control-label"></label>
                <input asp-for="Drug.Name" class="form-control" />
                <span asp-validation-for="Drug.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drug.DoseInMg" class="control-label">Dosis in Milligramm</label>
                <input asp-for="Drug.DoseInMg" class="form-control" />
                <span asp-validation-for="Drug.DoseInMg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drug.Description" class="control-label">Verwendung / Zweck</label>
                <input asp-for="Drug.Description" class="form-control" />
                <span asp-validation-for="Drug.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Erstellen" class="btn btn-primary" /> 
                <a type="submit" class="btn btn-primary" asp-page="Index">Zurück zu Liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
