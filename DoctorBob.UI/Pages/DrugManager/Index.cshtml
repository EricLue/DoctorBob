@page
@model DoctorBob.UI.Pages.DrugManager.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Medikamente Spitalapotheke</h1>

<p>
    <a type="submit" class="btn btn-primary" asp-page="Create">Hinzufügen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Name")
            </th>
            <th>
                @Html.DisplayName("Dosis in Milligramm")
            </th>
            <th>
                @Html.DisplayName("Verwendung / Zweck")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Drug)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoseInMg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Bearbeiten</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details anzeigen</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Löschen</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group row">
    <div class="col-2">
        <a type="submit" class="btn btn-primary" value="Zurück zu Liste" asp-area="" asp-page="/Home/HomeView">Home</a>
    </div>
</div>
