@page
@model DoctorBob.UI.Pages.RobotManager.CreateModel

@{
    ViewData["Title"] = "Create";
}

<div class="container border" style="padding: 20px">
    <h2>Roboter erfassen</h2>

    <hr />
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Robot.Name" class="control-label"></label>
                <input asp-for="Robot.Name" class="form-control" />
                <span asp-validation-for="Robot.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Erstellen" class="btn btn-primary" />
                <a type="submit" class="btn btn-primary" asp-page="Index">Zurück zu Liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
