@page
@model DoctorBob.UI.Pages.PatientManager.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Patienten Verwaltung</h1>

<p>
    <a asp-page="Create">Patient erfassen</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Room)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Therapy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].MedicalHistory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].EntryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].LeavingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].ModifiedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].ModifiedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Patient) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Therapy.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalHistory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EntryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeavingDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedAt)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
