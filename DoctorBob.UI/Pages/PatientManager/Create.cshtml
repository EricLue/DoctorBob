@page
@model DoctorBob.UI.Pages.PatientManager.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Erstellen</h1>

<h4>Patient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Patient.FirstName" class="control-label">Vorname</label>
                <input asp-for="Patient.FirstName" class="form-control" />
                <span asp-validation-for="Patient.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.LastName" class="control-label">Nachname</label>
                <input asp-for="Patient.LastName" class="form-control" />
                <span asp-validation-for="Patient.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Gender" class="control-label">Geschlecht</label>
                <select asp-for="Patient.GenderId" class="form-control" asp-items="ViewBag.Gender"></select>
                <span asp-validation-for="Patient.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Room" class="control-label">Raum</label>
                <select asp-for="Patient.RoomId" class="form-control" asp-items="ViewBag.Room"></select>
            </div>
            <div class="form-group">
                <label asp-for="Patient.Therapy" class="control-label">Therapie</label>
                <select asp-for="Patient.TherapyId" class="form-control" asp-items="ViewBag.Therapy"></select>
            </div>
            <div class="form-group">
                <label asp-for="Patient.MedicalHistory" class="control-label">Anamnese</label>
                <input asp-for="Patient.MedicalHistory" class="form-control"/>
                <span asp-validation-for="Patient.MedicalHistory" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Patient.EntryDate" class="control-label">Eintrittsdatum</label>
                <input asp-for="Patient.EntryDate" class="form-control" />
                <span asp-validation-for="Patient.EntryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Erstellen" class="btn btn-primary" />
                <a type="submit" class="btn btn-primary" asp-page="Index">Zurück zu Liste</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
