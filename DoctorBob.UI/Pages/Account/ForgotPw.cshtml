@page
@model DoctorBob.UI.Pages.Account.ForgotPwModel

@{
    ViewData["Title"] = "Confirm";
}
<div class="container border" style="padding: 20px">
    <h5>Bitte geben Sie den Benutzer ein, dessen Passwort zurückgesetzt werden soll</h5>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" />
                <div class="form-group">
                    <label class="control-label">Benutzername</label>
                    <input class="form-control" />
                    <span  class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ok" class="btn btn-primary" asp-page="./Login"/>
                </div>
            </form>
        </div>
    </div>
</div>