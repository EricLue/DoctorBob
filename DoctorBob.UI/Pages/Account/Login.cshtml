@page
@model DoctorBob.UI.Pages.Account.LoginModel
@{
}

<body>
    <div class="container border" style="padding:20px">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Credential.UserName">Benutzer</label>
                </div>
                <div class="col-5">
                    <input type="text" asp-for="Credential.UserName" />
                </div>
                <span class="text-danger" asp-validation-for="Credential.UserName"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="Credential.Password">Passwort</label>
                </div>
                <div class="col-5">
                    <input type="password" asp-for="Credential.Password" />
                </div>
                <span class="text-danger" asp-validation-for="Credential.Password"></span>
            </div>
            <div>
                <input type="submit" class="btn btn-primary" value="Login" onclick="OnPost" />
                <input type="submit" class="btn btn-dark" value="Passwort vergessen" onclick="" />
            </div>
        </form>
    </div>
</body>
